# -*- coding: utf-8 -*-

def titulo(txt):
    print('-' * 30)
    print(f'{txt:^30}')
    print('-' * 30)

def arearet(c, l):
    area = c * l
    print(f'A área do terreno de comprimento {c}m e largura {l}m é {area}m².')


titulo('Controle de Terrenos')
c = float(input('Comprimento do terreno (m): '))
l = float(input('Largura do terreno (m): '))
arearet(c, l)

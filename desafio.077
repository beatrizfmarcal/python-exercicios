# -*- coding: utf-8 -*-

palavras = ('jogar', 'brincar', 'estudar', 'comer', 'dormir', 'bartolomeu', 'granola', 'academia')
vogais = 'a', 'e', 'i', 'o', 'u'
for palavra in palavras:
    print(f'\nNa palavra {palavra.upper()} temos as vogais: ', end=' ') 
    for vogal in vogais:
        if vogal in palavra:
            print(vogal, end=' ')


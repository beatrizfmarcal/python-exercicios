# -*- coding: utf-8 -*-

print('=#'*20)
print('Para interromper, digite 999.')      
s = c = 0
while True:
    n = int(input('Digite um número: '))
    if n == 999:
        break
    c += 1
    s += n
print('A soma dos {} valores digitados é {}.'.format(c, s))
print(f'A soma dos {c} valores digitados é {s}.')

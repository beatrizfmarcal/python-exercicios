# -*- coding: utf-8 -*-

números = [[], []]
for c in range(1, 7+1):
    n = int(input(f'Digite o {c}º número: '))
    if n % 2 == 0:
        números[0].append(n)
    else:
        números[1].append(n)
print(f'\nOs valores pares digitados foram: {sorted(números[0])}')
print(f'Os valores ímpares digitados foram: {sorted(números[1])}')
print(f'A lista completa é: {números}')

# -*- coding: utf-8 -*-

número = int(input('Digite um número de 0 a 9999: '))
print('A unidade correspondente ao número é {}.'.format(número%10))
print('A dezena correspondente ao número é {}.'.format((número//10)%10))
print('A centena correspondente ao número é {}.'.format((número//100)%10))
print('A unidade de milhar correspondente ao número é {}.'.format(número//1000))


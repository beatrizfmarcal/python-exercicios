num2 = str(input('Digite um número de 0 a 9999: '))
num3 = num2.zfill(4)
print(num3)
separado = num3.split()
print('A unidade é {}.'.format(separado[0][3]))
print('A dezena é {}.'.format(separado[0][2]))
print('A centena é {}.'.format(separado[0][1]))
print('A unidade de milhar é {}.'.format(separado[0][0]))

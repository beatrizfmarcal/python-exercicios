# -*- coding: utf-8 -*-

from random import choice, shuffle

w = input('Aluno 1: ')
x = input('Aluno 2: ')
y = input('Aluno 3: ')
z = input('Aluno 4: ')
print('O aluno selecionado para apagar o quadro foi {}.'. format(choice([w, x, y, z])))

ordem = [w, x, y, z] 
shuffle(ordem)
print('A ordem de apresentação é a seguinte: {}'.format(ordem))

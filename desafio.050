# -*- coding: utf-8 -*-

print('\n*** SOMA DE NÚMEROS PARES ***')
soma = 0 #acumulador
cont = 0 #contador
for c in range(1, 6+1):
    n = int(input('Insira o {}º número: '.format(c)))
    if n % 2 == 0:
        soma += n
        cont += 1
print('\nA soma dos {} números pares digitados é {}.'.format(cont, soma))
print('\n--FIM--')

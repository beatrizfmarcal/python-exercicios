# -*- coding: utf-8 -*-

from random import randint

aleatório = randint(0, 5)
escolhido  = int(input('Escolha um número de 0 a 5: '))
if aleatório == escolhido:
    print('Parabéns! Você acertou.')
else:
    print('Que pena! Você não adivinhou. O número sorteado foi {}.'.format(aleatório))


#!/usr/bin/env python3
# -*- coding: utf-8 -*-

vcasa = float(input('Valor da casa pretendida: '))
salário = float(input('Seu salário: '))
anos = float(input('Anos para pagar: '))
prestação = vcasa/(anos*12)
if prestação <= (salário*0.3):
    print('\n\033[32mSeu empréstimo foi aprovado! O valor da parcela será de R$ {:.2f}.\033[m'.format(prestação))
else:
    print('\n\033[33mSeu empréstimo não foi aprovado\033[m.')



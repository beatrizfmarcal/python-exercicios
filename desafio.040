# -*- coding: utf-8 -*-

n1 = float(input('Insira sua primeira nota: '))
n2 = float(input('Insira sua segunda nota: '))
m = (n1+n2)/2
if m < 5:
    print('\n\033[4;031mREPROVADO! Média {:.2f}\033[m'.format(m))
elif 5 <= m <= 6.99:
    print('\n\033[31mRECUPERAÇÃO Média {:.2f}\033[m'.format(m))
elif m >= 7:
    print('\n\033[32mAPROVADO! Média {:.2f}\033[m'.format(m))
